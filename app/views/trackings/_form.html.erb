<%= form_for @tracking, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :status_id, Status.all, :id, :name, :include_blank => "Select a status" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_id, :class => 'control-label' %>
    <div class="controls">
    	<!--Unit.where("email = ?", "abc@xyz.com").first-->
      <%= f.collection_select :unit_id, Unit.all, :unit_id, :unit_id, :include_blank => "Select a unit" %>
    </div>
  </div>
 
  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comment, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                trackings_path, :class => 'btn' %>
  </div>
<% end %>
