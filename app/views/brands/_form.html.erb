<%= form_for @brand, :html => { :class => 'form-horizontal' } do |f| %>
	 <% if @brand.errors.any? %>
    <div class="error_messages">
      <h4><%= pluralize(@brand.errors.count, "error") %> prohibited this type of component from being saved:</h4>
      <ul>
      <% @brand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_per_unit, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total_per_unit, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                brands_path, :class => 'btn' %>
  </div>
<% end %>
