<div id="flash-wrapper">
<div id="flash">
	<%= bootstrap_flash %>
	</div>
</div>
<div id="login-wrapper">
	
	<h3 class="scanwell">ScanWell</h3>
	<div class="login-form">
		<%= form_tag sessions_path, class: 'form-signin'  do %>

		<%= text_field :email, nil, :placeholder => "Email adress" , :autofocus => true%>
		<br />
		<%= password_field_tag :password, nil, :placeholder => "Password"%>
		<br/>
		<%= submit_tag "Sign in", :class => 'btn btn-primary btn-block' %>
		<% end %>
	</div>
</div>
