<h1>Listing activity_logs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Controller</th>
      <th>Action</th>
      <th>Params</th>
      <th>Note</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_logs.each do |activity_log| %>
      <tr>
        <td><%= activity_log.user_id %></td>
        <td><%= activity_log.controller %></td>
        <td><%= activity_log.action %></td>
        <td><%= activity_log.params %></td>
        <td><%= activity_log.note %></td>
        <td><%= link_to 'Show', activity_log %></td>
        <td><%= link_to 'Edit', edit_activity_log_path(activity_log) %></td>
        <td><%= link_to 'Destroy', activity_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

