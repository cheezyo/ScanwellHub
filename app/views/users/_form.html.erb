<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Company', :class => 'control-label' %>
    <div class="controls">
     <%= f.collection_select :company_id, Company.all, :id, :name, :include_blank => "Select a company" %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, nil, class: 'control-label' %>
    <div class="controls">
          <%= f.password_field :password %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password_confirmation, nil , class: 'control-label' %>
    <div class="controls">
    	    <%= f.password_field :password_confirmation %>
     
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
