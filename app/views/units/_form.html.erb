<%= form_for @unit, :html => { :class => 'form-horizontal' } do |f| %>
 		<% if @unit.errors.any? %>
		    <div class="alert">
		      <h4><%= pluralize(@unit.errors.count, "error") %> prohibited this unit from being saved:</h4>
		      <ul>
		      <% @unit.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
  		<% end %>
  <div class="control-group">
    <%= f.label :unit_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :unit_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Owner', :class => 'control-label' %>
    <div class="controls">
     <%= f.collection_select :company_id, Company.all, :id, :name, :include_blank => "Select a owner" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_check, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :last_check, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :available, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :available, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :comment, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                units_path, :class => 'btn' %>
  </div>
<% end %>
