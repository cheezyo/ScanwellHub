<%= form_for @component, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label 'Serial number', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comp_id, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :brand_id, :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :brand_id, Brand.all, :id, :name, :include_blank => "Select a type" %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :unit_id, :class => 'control-label' %>
    <div class="controls">
     <%= f.collection_select :unit_id, Unit.all, :id, :unit_id, :include_blank => "Select a unit" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_check, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :last_check, :class => 'text_field' %>
    </div>
  </div>
  
<%= f.hidden_field :location, :value => 4 %>


  <div class="control-group">
    <%= f.label :calibrated, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box  :calibrated, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :commet, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :commet, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                components_path, :class => 'btn' %>
  </div>
<% end %>
