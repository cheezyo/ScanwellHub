<%= form_for @component, :html => { :class => 'form-horizontal' } do |f| %>
  	 <% if @component.errors.any? %>
    <div class="alert">
      <h4><%= pluralize(@component.errors.count, "error") %> prohibited this type of component from being saved:</h4>
      <ul>
      <% @component.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label 'Serial number', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comp_id, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label "Type of component", :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :brand_id, Brand.all, :id, :name, :include_blank => "Select a type" %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :unit_id, :class => 'control-label' %>
    <div class="controls">
     <%= f.collection_select :unit_id, Unit.all, :id, :unit_id, :include_blank => "Select a unit" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_check, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :last_check, :class => 'text_field' %>
    </div>
  </div>
  
   <div class="control-group">
    <%= f.label "Owner", :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :company_id, Company.all, :id, :name, :include_blank => "Select owner" %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :calibrated, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box  :calibrated, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :commet, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :commet, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                components_path, :class => 'btn' %>
  </div>
<% end %>
