<%- model_class = Location -%>
<div class="page-header">
  <h1><%= @location.name %> <% if @location.more != "" %>
 
  	<%= @location.more %>
  	<% end %></h1>
</div>

<dl class="dl-horizontal">

  </dd>
</dl>

<table class="table table-striped">
  <thead>
    <tr>
      
        <th>Unit id</th>
        <th>Owner</th>
    	<th> Location</th>
    	<th>Last check</th>
    	<th>Approved</th>
    	
    	<th>Comments</th>

    
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% Unit.where(location: @location.id ).each do |unit| %>
      <tr>
        
        <td><%= link_to unit.unit_id, unit %></td>
        <% if unit.company_id != nil %>
        <% company = Company.find(unit.company_id) %>
        <td><%= link_to company.name, company %></td>
        <% else %>
        No owner
        <% end %>
        <td><%= Location.find(unit.location).name %></td> 
        <td><%= unit.last_check %></td>
        <td><%= unit.last_check + 1.year %>
        	<% days = (unit.last_check + 1.year)- DateTime.now %>
        	<% if days > 90 %>
        	<span style="color:#00ff00;">
        	<% elsif days < 90 && days > 30 %>
        	<span style="color:#FF9900;">
        	<% else %>
        	<span style="color:#bb0000;">
        	<% end %>
        	(in <%= days.to_i%> days)
        	</span>
        </td>
        <td><% if unit.approved %>
        	Yes
        	<% else %>
        	No
        	<% end %>
        </td>
        <td><%= unit.comment.truncate(15) %></td>
       
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_unit_path(unit), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      unit_path(unit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              locations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_location_path(@location), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_path(@location),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
