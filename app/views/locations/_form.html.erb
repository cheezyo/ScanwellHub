<%= form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
    	 <% if @location.errors.any? %>
		    <div class="alert">
		      <h4><%= pluralize(@location.errors.count, "error") %> prohibited this type of component from being saved:</h4>
		      <ul>
		      <% @location.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
  		<% end %>
   <div class="control-group">
    <%= f.label "Location for company: ", :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :company_id, Company.all, :id, :name, :include_blank => "Select a owner" %>
    </div>
  </div>
   <div class="control-group">
    <%= f.label "Location status: ", :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select :status, Status.all, :id, :name, :include_blank => "Select a status" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :adress, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :postal_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :postal_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn' %>
  </div>
<% end %>
